<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
   http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">

	<persistence-unit name="statistics" transaction-type="RESOURCE_LOCAL">
	<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<class>org.sitenv.statistics.entity.CcdaValidationEntity</class>
		<class>org.sitenv.statistics.entity.DateItemEntity</class>
		<class>org.sitenv.statistics.entity.SmartCcdaValidationEntity</class>
		<class>org.sitenv.statistics.entity.CcdaDownloadEntity</class>
		<class>org.sitenv.statistics.entity.QrdaValidationEntity</class>
		<class>org.sitenv.statistics.entity.DirectReceiveEntity</class>
		<class>org.sitenv.statistics.entity.DirectTrustUploadEntity</class>
		<class>org.sitenv.statistics.entity.PdtiTestCaseEntity</class>
		<class>org.sitenv.statistics.entity.PdtiTestGroupEntity</class>
		<properties>
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.format_sql" value="true" />
			<property name="hibernate.driver_class" value="org.postgresql.Driver" />
			<property name="hibernate.connection.datasource" value="java:comp/env/jdbc/site_statistics"/>
			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />
			<property name="hibernate.flush_before_completion" value="true" />
			<property name="hibernate.c3p0.min_size" value="5" />
			<property name="hibernate.c3p0.max_size" value="20" />
			<property name="hibernate.c3p0.timeout" value="300" />
			<property name="hibernate.c3p0.max_statements" value="50" />
			<property name="hibernate.c3p0.idle_test_period" value="3000" />
		</properties>
		
		
	</persistence-unit>

</persistence>